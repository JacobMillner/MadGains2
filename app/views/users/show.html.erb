<% if current_user %>
<div id="createPost" class="panel right">
    <h1>Create a Post</h1>
    <p>
    <%= form_for @post do |f| %>
        <%= f.text_area(:content, class: 'postText') %>
        <%= f.submit "Post" %>
    <% end %>
    </p>
</div>
<% end %>
<div id="posts" class="panel left">
    <h1>Your MadGains Profile
    <% if @user.id == current_user.id %>
    	<div align="right"><%= link_to "Edit", edit_path %></div>
    <% end %>
    </h1> 
    <div class="madGainsWrapper">
        <img class="avatar" src="<%= @user.avatar_url %>">
        <span class="name"><%= @user.name %></span> @<%= @user.username %>
        <p>
        <%= @user.posts.size %> Posts
        <span class="spacing"><%= @user.followers.count %> Followers</span>
        <span class="spacing"><%= @user.followeds.count %> Following</span>

	<% if current_user and @user != current_user %>
    		<% if current_user.following? @user %>
        		<%= form_tag @relationship, method: :delete do %>
            			<%= submit_tag "Unfollow" %>
        		<% end %>
    		<% else %>
        		<%= form_for @relationship do %>
            			<%= hidden_field_tag :followed_id, @user.id %>
            			<%= submit_tag "Follow" %>
        		<% end %>
    		<% end %>
	<% end %>		

        </p>
	<p>
		<%= @user.bio %>
	</p>
    </div>
</div>
<div class="panel left">
    <h1>Your Posts</h1>
    <% @user.posts.each do |post| %>
        <div class="madGainsWrapper">
            <img class="avatar" src="<%= @user.avatar_url %>">
            <span class="name"><%= @user.name %></span>
            @<%= @user.username %>
            <span class="time"><%= time_ago_in_words(post.created_at) %></span>
            <p> <%= post.content %> </p>
        </div>
    <% end %>
</div>
